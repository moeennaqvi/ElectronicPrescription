@model IEnumerable<ElectronicRX2._1.Models.PharmaceuticalFirmModel>

<!--Table-->
<table class="table table-striped table-bordered table-condensed" id="dataTable">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
                ZIP
            </th>
            <th>
                Phone
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PharmaceuticalFirmID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PharmaceuticalFirmName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <input type="button" class="btn btn-sm btn-success" value="Select" id="btnSelected" />
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">

    jQuery('#dataTable tbody tr').on('click', function () {
            var $row = jQuery(this).closest('tr');
            var $columns = $row.find('td');
            $columns.addClass('row-highlight');
            var objects = [];
            var values = "";
            jQuery.each($columns, function (i, item) {
                objects[i] = $.trim(item.innerHTML);
                values = values + "" + item.innerHTML;
            });
            $('#exampleModal').modal('hide');
            $('#companyId').val(objects[0]);
            $('#companyName').val(objects[1]);
            
        });
</script>
