@model ElectronicRX2._1.Models.AdminModel

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>


@{
    ViewBag.Title = "Create a New Admin";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("New", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    
    <legend>Personal Information</legend>

    <div class="row">
        <div class="col-sm-4">
            <div class="form-group input-group">
                &nbsp;&nbsp;&nbsp;
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Admin's Email*" })
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-tag"></i></span>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Admin's First Name*" })
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-tag"></i></span>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Admin's Last Name*" })
            </div>
        </div>
    </div>


    <div class="row">

        <div class="col-sm-4">
            <div class="form-group input-group">
                &nbsp;&nbsp;&nbsp;
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                @Html.TextBoxFor(m => m.DOB, new { @class = "form-control datepicker", placeholder = "Date of Birth*" })
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", placeholder = "Admin's Mobile No." })
            </div>
        </div>

        <div class='col-sm-4'>
            <div class='form-group'>
                <span class="radio-inline"><b>Gender</b></span>
                <div class="radio-inline">
                    @Html.RadioButtonFor(m => m.Gender, "Male") Male
                </div>
                <div class="radio-inline">
                    @Html.RadioButtonFor(m => m.Gender, "Female") Female
                </div>
                <div class="radio-inline">
                    @Html.RadioButtonFor(m => m.Gender, "Other") Other
                </div>
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-sm-4">
            <div class="form-group input-group">
                &nbsp;&nbsp;&nbsp;
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password*" })
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password*" })
            </div>
        </div>

    </div>









    <legend>Contact Information</legend>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group input-group">
                &nbsp;&nbsp;&nbsp;
                <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                @Html.TextBoxFor(m => m.StreetAddress, new { @class = "form-control", placeholder = "Admin's Address" })
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-building-o"></i></span>
                @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "Admin's City" })
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "Admin's State" })
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-sm-4">
            <div class="form-group input-group">
                &nbsp;&nbsp;&nbsp;
                <span class="input-group-addon"><i class="fa fa-bullseye"></i></span>
                @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", placeholder = "Admin's Zip Code" })
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Admin's Phone Number" })
            </div>
        </div>

        <div class="col-sm-4">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-fax"></i></span>
                @Html.TextBoxFor(m => m.FaxNumber, new { @class = "form-control", placeholder = "Admin's Fax Number" })
            </div>
        </div>


    </div>


    <form role="form">
        <br />

        <input type="submit" class="btn btn-success" value="Create" />
    </form>
    <hr />


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    


}


