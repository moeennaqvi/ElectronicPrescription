@model IEnumerable<ElectronicRX2._1.Models.PharmacyModel>


<table class="table table-striped table-bordered table-condensed" id="dataTable">
    <tr>
        <th>
            Pharmacy ID
        </th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Phone Number
        </th>
        <th>
            City
        </th>
        <th>
            State
        </th>
        <th>
            Zip Code
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PharmacyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PharmacyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                <input type="button" class="btn btn-sm btn-success" value="Select" id="btnSelected" />
            </td>
        </tr>
    }

</table>

<script type="text/javascript">

        jQuery('#dataTable tbody tr').on('click', function () {
            var $row = jQuery(this).closest('tr');
            var $columns = $row.find('td');
            $columns.addClass('row-highlight');
            var objects = [];
            var values = "";
            jQuery.each($columns, function (i, item) {
                objects[i] = $.trim(item.innerHTML);
                values = values + "" + item.innerHTML;
            });
            $('#pharmacyModal').modal('hide');
            $('#pharmacyId').val(objects[0]);
            $('#pharmacyName').val(objects[1]);

            $('#pharmacyNamelbl').empty();
            $('#pharmacyNamelbl').append(objects[1]);

            $('#pharmacyAddresslbl').empty();
            $('#pharmacyAddresslbl').append(objects[2]);

            $('#pharmacyCitylbl').empty();
            $('#pharmacyCitylbl').append(objects[4]);

            $('#pharmacyStatelbl').empty();
            $('#pharmacyStatelbl').append(objects[5]);

            $('#pharmacyZiplbl').empty();
            $('#pharmacyZiplbl').append(objects[6]);

            $('#pharmacyNumberlbl').empty();
            $('#pharmacyNumberlbl').append(objects[3]);

            
        });
</script>


